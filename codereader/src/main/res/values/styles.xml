<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <!--<style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>-->
    <style name="BaseTheme" parent="@style/MaterialDrawerTheme.Light.DarkToolbar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- statusBar颜色 -->
        <!--<item name="actionBarStyle">@style/MyActionBar</item>-->
        <item name="colorPrimaryDark">#1A237E</item>
        <!-- actionbar颜色 colorAccent 9FA8DA-->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorAccent">#3F51B5</item>
    </style>
    <!--<style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">-->
        <!--<item name="titleTextStyle">@style/MyTitleTextStyle</item>-->
    <!--</style>-->
    <!--<style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">-->
        <!--<item name="android:textColor">@color/md_white_1000</item>-->
    <!--</style>-->
    <style name="BaseTheme.ActionBar" parent="@style/BaseTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>
    <style name="AppBaseTheme" parent="@style/MaterialDrawerTheme.Light.TranslucentStatus">
    </style>
    <style name="AppBaseThemeNoActionBar" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- statusBar颜色 -->
        <item name="colorPrimaryDark">#1A237E</item>
        <!-- actionbar颜色 colorAccent 9FA8DA-->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorAccent">#3F51B5</item>
        <item name="actionModeShareDrawable">@drawable/ic_share_24dp</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppBaseThemeNoActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <item name="colorPrimaryDark">#1A237E</item>
        <!-- actionbar颜色 -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorAccent">#9FA8DA</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="android:elevation" tools:ignore="NewApi">@dimen/headerbar_elevation</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
