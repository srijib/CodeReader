<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BaseTheme" parent="Theme.AppCompat.Light">
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <!--<item name="colorPrimaryDark">@color/colorPrimaryDark</item>-->
    </style>

    <style name="BaseThemeNoActionBar" parent="BaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Bases application theme. -->
    <style name="AppTheme" parent="BaseThemeNoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppTheme.TranslucentStatusBar"></style>

    <style name="HeaderBar">
        <item name="android:background">?colorPrimary</item>
        <item name="elevation">@dimen/headerbar_elevation</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <!--<item name="textColorPrimary">#000</item>-->
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CommonListView" parent="Base.Widget.AppCompat.ListView">
        <item name="android:layout_width">match_parent</item>
    </style>
</resources>
